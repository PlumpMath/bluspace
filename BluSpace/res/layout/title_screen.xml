<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:padding="@dimen/padding_medium"
        android:text="@string/app_name"
        tools:context=".TitleScreen" />

    <Button
        android:id="@+id/StartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/start" />

    <Button
        android:id="@+id/RestartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StartGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:text="@string/restart" />

    <Button
        android:id="@+id/Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RestartGame"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:text="@string/options_title" />
    <Button
        android:id="@+id/BluetoothGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RestartGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/bluetoothGame" />

</RelativeLayout>
